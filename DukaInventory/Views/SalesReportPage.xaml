<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DukaInventory.Views.SalesReportPage"
             Title="Sales">
    <StackLayout Padding="12">
        <Label x:Name="TotalLabel" FontAttributes="Bold" FontSize="18"/>
        <CollectionView x:Name="SalesCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="6">
                        <Label Text="{Binding ItemName}" FontAttributes="Bold"/>
                        <Label Text="{Binding Quantity, StringFormat='Qty: {0}'}" />
                        <Label Text="{Binding Total, StringFormat='Total: Ksh {0:F2}'}"/>
                        <Label Text="{Binding CreatedAt, StringFormat='{0:yyyy-MM-dd HH:mm}'}" FontSize="12"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
