<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
             x:Class="DukaInventory.Views.RecordSalePage"
             Title="Record Sale">
    <StackLayout Padding="12" Spacing="10">
        <Label x:Name="ItemLabel" FontAttributes="Bold"/>
        <Label x:Name="StockLabel" />
        <Entry x:Name="QtyEntry" Placeholder="Quantity sold" Keyboard="Numeric"/>
        <Entry x:Name="PriceEntry" Placeholder="Unit price (Ksh)" Keyboard="Numeric"/>
        <Button Text="Record Sale" Clicked="OnRecordClicked"/>
    </StackLayout>
</ContentPage>
